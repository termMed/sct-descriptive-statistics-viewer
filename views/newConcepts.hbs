<div class="col-md-12">
    <div class="card">
        <div class="card-height-indicator"></div>
        <div class="card-content">
            <div class="card-body">
                <h2>New Concepts Statistics</h2>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <table class="table table-striped table-hover ">
                                <thead>
                                <tr>
                                    <th>Hierarchy</th>
                                    <th>New Cncepts</th>
                                    <th>% new in Hierarchy</th>
                                    <th>% of All New in Release</th>
                                    <th>% Added as SD (*)</th>
                                    <th>% Added as P (*)</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each rows}}
                                    <tr class="small">
                                        <td>{{term}}</td>
                                        <td class="text-right">{{NewConcepts}}</td>
                                        <td class="text-right">{{PercentOfTotal}}%</td>
                                        <td class="text-right">{{PercentOfAllNew}}%</td>
                                        <td class="text-right">{{PercentOfNewSD}}%</td>
                                        <td class="text-right">{{PercentOfNewP}}%</td>
                                    </tr>
                                {{/each}}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6">(*) SD = Sufficiently defined<br>
                                            P = Primitive</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div><!-- /example -->
                    </div>
                </div>
            </div>
            <footer class="card-footer">
                <!--<button class="btn btn-flat">Share</button>-->
                <!--<button class="btn btn-flat btn-warning">Learn More</button>-->
            </footer>
        </div>
    </div>
</div>
